= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :short_name
    = f.text_field :short_name
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :logo_image
    = f.file_field :logo_image
  - if @team.persisted? && @team.logo_image.thumb.url.present?
    .field
      = image_tag @team.logo_image.thumb.url

  .actions
    = f.submit 'Save'
